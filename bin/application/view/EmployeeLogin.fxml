                              <Stop color="#a61500" />
                              <Stop color="#0017a1" offset="1.0" />
                           </stops>
                        </LinearGradient>
                     </textFill></Label>
                  <TextField fx:id="usernameField" prefHeight="27.0" prefWidth="542.0" promptText="Username" />
                  <PasswordField fx:id="passwordField" promptText="password" />
                  <HBox alignment="TOP_CENTER" spacing="100.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#newAccount" prefHeight="45.0" prefWidth="158.0" text="New Account">
                           <font>
                              <Font name="Apple SD Gothic Neo Regular" size="22.0" />
                           </font>
