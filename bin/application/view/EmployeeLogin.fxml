                           <font>
                              <Font name="Apple SD Gothic Neo Regular" size="24.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </center>
         <top>
            <VBox alignment="TOP_CENTER" prefHeight="90.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" prefHeight="59.0" prefWidth="448.0" text="Login to Employee Account" textFill="#8a0303">
                     <font>
                        <Font name="Times New Roman" size="36.0" />
                     </font>
                  </Label>
                  <Label fx:id="warningLabel" prefHeight="38.0" prefWidth="416.0" text="To create a new account, enter your desired username and password, then click New Account" textAlignment="CENTER" textFill="#1f00ad" wrapText="true" />
