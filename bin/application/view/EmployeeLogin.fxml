            </VBox>
         </top>
      </BorderPane>
      <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#previousScreen" style="-fx-background-color: darkgoldenrod;" text="Back">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
   </children>
